#!/usr/bin/env sh

# Dmenu for selecting which browser to open.

Browsers="Brave
qutebrowser
chrome
B-Brave
A-Brave
C-Brave
R-Brave
B-Chrome
A-Chrome
R-Chrome"

Chosen="$(printf "%s" "$Browsers" \
	| dmenu -i -l 20 -p "Select browser:")"
[ -z "$Chosen" ] && exit 1

case "$Chosen" in
	Brave) brave "$@";;
	qutebrowser) qutebrowser "$@";;
	Chrome) google-chrome-stable "$@";;
	B-Brave) brave --profile-directory="Profile 1" "$@";;
	A-Brave) brave --profile-directory=Default "$@";;
	C-Brave) brave --profile-directory="Profile 3" "$@";;
	R-Brave) brave --profile-directory="Profile 2" "$@";;
	B-Chrome) google-chrome-stable --profile-directory=Default "$@";;
	A-Chrome) google-chrome-stable --profile-directory="Profile 2" "$@";;
	R-Chrome) google-chrome-stable --profile-directory="Profile 1" "$@";;
	*) eval "$Chosen" "$@";;
esac
